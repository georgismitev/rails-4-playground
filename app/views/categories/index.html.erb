<h1>Categories</h1>

<div class="table-responsive" id="products" data-products="<%= json_for @categories %>">
  <table class="table table-hover table-bordered table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= link_to 'Show', category, class: 'btn btn-success btn-xs' %></td>
          <td><%= link_to 'Edit', edit_category_path(category), class: 'btn btn-info btn-xs' %></td>
          <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Category', new_category_path, class: 'btn btn-warning' %>
